# Template file for 'belle-sip'
pkgname=belle-sip
version=1.5.0
revision=1
build_style=gnu-configure
short_desc="SIP (RFC3261) implementation written in C"
maintainer="David <kalichakra@zoho.com>"
license="GPL-2"
homepage="http://www.linphone.org"
distfiles="http://download.savannah.gnu.org/releases/linphone/${pkgname}/${pkgname}-${version}.tar.gz"
checksum="4bc44ee83f8455fb6248d3b3045c38ab6e71e6699cde3f0cc5d67493bb38a43a"

makedepends="antlr3-bin mbedtls-devel libantlr3c bctoolbox-devel"
hostmakedepends="libtool pkg-config"

configure_args="--disable-strict"

belle-sip-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/*.a
		vmove usr/lib/*.so
		vmove usr/lib/pkgconfig
	}
}
