# Template file for 'ortp'
pkgname=ortp
version=0.27.0
revision=1
short_desc="A Real-time Transport Protocol (RTP) library"
maintainer="David <kalichakra@zoho.com>"
build_style="gnu-configure"
license="GPL-2"
homepage="http://www.linphone.org/index.php/eng/code_review/ortp"
distfiles="http://download.savannah.gnu.org/releases/linphone/${pkgname}/sources/${pkgname}-${version}.tar.gz"
checksum="eb61a833ab3ad80978d7007411240f46e9b2d1034373b9d9dfaac88c1b6ec0af"

hostmakedepends="libtool pkg-config"
makedepends="bctoolbox-devel"

ortp-devel_package() {
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.so"
		vmove usr/lib/pkgconfig
	}
}
