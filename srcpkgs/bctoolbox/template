# Template file for 'bctoolbox'
pkgname=bctoolbox
version=0.2.0
revision=1
short_desc="Belledonne Communications utility library"
maintainer="David <kalichakra@zoho.com>"
build_style="gnu-configure"
license="GPL-2"
homepage="http://www.linphone.org"
distfiles="http://download.savannah.gnu.org/releases/linphone/${pkgname}/${pkgname}-${version}.tar.gz"
checksum="a5d37036169dbf51bb67c705dacd300d1d9e3cd3642cef8df6dc630397d93b92"

makedepends="mbedtls-devel cunit"
hostmakedepends="pkg-config"

bctoolbox-devel_package() {
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.so"
		vmove usr/lib/pkgconfig
	}
}
