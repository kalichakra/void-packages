# Template file for 'libantlr3c'
pkgname=libantlr3c
version=3.4
revision=1
build_style=gnu-configure
short_desc="C runtime for the ANTLR parsing library"
maintainer="David <kalichakra@zoho.com>"
license="3-clause-BSD"
homepage="http://www.antlr.org"
distfiles="http://www.antlr3.org/download/C/${pkgname}-${version}.tar.gz"
checksum="ca914a97f1a2d2f2c8e1fca12d3df65310ff0286d35c48b7ae5f11dcc8b2eb52"

pre_configure() {
	case "$XBPS_TARGET_MACHINE" in
	x86_64*|aarch64*)
		configure_args+=" --enable-64bit"
		;;
	esac
}

post_install() {
	vlicense COPYING
}
